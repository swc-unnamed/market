{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"globalDependencies": [
		".env"
	],
	"tasks": {
		"build": {
			"outputs": [
				"dist/**",
				"build/**"
			]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"db:generate": {
			"cache": false,
			"persistent": false
		}
	}
}